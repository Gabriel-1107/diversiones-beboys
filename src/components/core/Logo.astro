---
import config from "@/config/config.json";
import { Image } from "astro:assets";
const { src, showText } = Astro.props;
const {
  logo_text,
  logo_width,
  logo_height,
  title,
}: {
  logo: string;
  logo_text: string;
  logo_width: string;
  logo_height: string;
  title: string;
} = config.site;

const text = logo_text;
---

<a href="/" class="navbar-brand flex flex-row items-center">
 <div class="logo-container">
  <img class="logo-img" src="/images/logotipo.png" alt="logo">
</div>

<style>
  .logo-container {
    width: 80px; /* Ajusta el tamaño del contenedor */
    height: 80px;
    border-radius: 50%; /* Hace que el contenedor sea circular */
    overflow: hidden; /* Oculta las partes sobrantes de la imagen */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Evita que la imagen se deforme */
  }

  /* Ajustes para dispositivos móviles */
  @media (max-width: 768px) { 
    .logo-container {
      width: 50px;
      height: 50px;
    }
  }
</style>

  {
    showText != false && (
      <p class="hidden md:block text-text md:text-3xl font-bold ml-2">
        {text ? text : logo_text}
      </p>
    )
  }
</a>
